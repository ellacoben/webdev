
<h1>To Do List</h1>

 <% @tasks.each do |task| %> 
   <%= task.description %> <% unless task.due_date.blank? %> - <% end %>
   <%= task.due_date %>
   <br>
  <% end %> 
 

<br><br><br><br>
<form action='/' method='POST'>
  <strong>New Task:</strong>
  <input type='text' name='task' placeholder='task content' />
  <input type='text' name='date' placeholder='due: mm/dd/yy' />
  <input type='submit' value='Save'>
</form>




